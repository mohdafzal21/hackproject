extends ../layout
block content
    style(type='text/css').
        #edit-form {
            display: none;
        }
    .page-header
        h3 This is #{sport.name} page
    ul(id='display_li' class='form')

        li(id='li_name')=sport.name
        li(id='li_type')=sport.type

        form.form-horizontal(class='form', method='POST' action="/deleteSport")
            input(type='hidden', name='_csrf', value=_csrf)
            input(type='hidden', name='name', value=sport.name)
            .form-group
                .col-sm-offset-3.col-sm-7
                    button.btn.btn-success(type='submit')
                        i.fa.fa-trash-o
                    | Delete


    .form-group
        .col-sm-offset-3.col-sm-7

            button.btn.btn-success(type='submit' id='link' class='form')
                i.fa.fa-trash-o
                | edit





        form.form-horizontal(id='edit-form')
            input(type='hidden', name='_csrf', value=_csrf id='_csrf')
            input(type='hidden', name='id', value=sport.id id='id')
            .form-group
                label.col-sm-3.control-label(for='name') Name
                .col-sm-7
                    input.form-control(type='text', name='name', id='name', placeholder='Enter sports name', autofocus, required value=sport.name)
            .form-group
                label.col-sm-3.control-label(for='type') Type
                .col-sm-7
                    input.form-control(type='text', name='type', id='type', placeholder='Enter type name', autofocus, required value=sport.type)
            .form-group
                .col-sm-offset-3.col-sm-7
                    button.btn.btn-success( id='ajax_update' type='submit')
                        i.fa.fa-user-plus
                        | Edit

    a(href='/listsports') List of Sport

    a(href='/createSportForm') Create Sport